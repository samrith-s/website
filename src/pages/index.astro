---
import FeaturedProjects from "@/components/Projects/FeaturedProjects.astro";

import LatestBlogs from "@/components/LatestBlogs.astro";
import RootLayout from "@/layouts/RootLayout.astro";
import { SITE_SUBLINE } from "@/consts";
import { cn } from "@/utils/cn";
---

<RootLayout
  og={{
    description: SITE_SUBLINE,
  }}
>
  <div class="grid grid-flow-row gap-10">
    <div
      class={cn(
        "grid",
        "gap-6",
        "grid-rows-[max-content_max-content]",
        "grid-cols-1",
        "sm:grid-rows-1",
        "sm:grid-cols-2",
        "items-center",
      )}
    >
      <div>
        <h1 class="m-0">Samrith Shankar</h1>
        <p class="max-w-sm m-0">
          Full-stack, TypeScript, DevX, CLI, tooling, open source.
        </p>
        <p>
          Featured projects <span class="hidden sm:inline">&rarr;</span><span
            class="sm:hidden">&darr;</span>
        </p>
      </div>

      <FeaturedProjects />
    </div>

    <LatestBlogs />
  </div>
</RootLayout>
